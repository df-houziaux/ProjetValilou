@model IEnumerable<ProjetValilou.Models.Product>

@{
    ViewBag.Title = "Produits de la Catégorie";

    // Déterminer la classe de fond en fonction de la catégorie
    string backgroundClass = ViewBag.Category switch
    {
        "category1" => "background-category1", // Violet pâle
        "category2" => "background-category2", // Jaune pâle
        "category3" => "background-category3", // Rose pâle
        _ => ""
    };
}

<div style="text-align: center;">
    <h1 class="category-title">Produits de la Catégorie</h1>
</div>

<div class="product-list-grid @backgroundClass">
    @foreach (var product in Model)
    {
        <div class="flip-card">
            <div class="flip-card-inner">
                <!-- Face avant de la carte -->
                <div class="flip-card-front">
                    <div class="card">
                        <img src="@product.ImageUrl" alt="@product.Name" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="card-price">@product.Price €</p>
                        </div>
                    </div>
                </div>

                <!-- Face arrière de la carte -->
                <div class="flip-card-back">
                    <h2>@product.Name</h2>
                    <p>Ingrédients :</p>
                    <p>@product.Ingredients</p>
                </div>
            </div>
        </div>
    }
</div>

<!-- Lien vers le fichier CSS -->
<link rel="stylesheet" href="~/css/styles.css" />
